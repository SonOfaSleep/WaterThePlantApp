<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WaterThePlantApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green_300_darker</item>
        <item name="colorPrimaryVariant">@color/light_green_300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_300_darker</item>
        <item name="colorSecondaryVariant">@color/red_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Alert dialog theme -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="myToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.WaterThePlantApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="InputTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/light_green_300_darker</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="Theme.WaterThePlantApp.Slider" parent="Widget.MaterialComponents.Slider" >
        <item name="labelStyle">@style/Widget.WaterThePlantApp.Tooltip</item>
    </style>

    <style name="Widget.WaterThePlantApp.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/red_300</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:textColor">@color/light_green_300_darker</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/red_300</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/light_green_300_darker</item>
    </style>

</resources>